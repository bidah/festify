<%= bootstrap_form_for(@event, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
  <%= f.text_field :name, label: "Nombre del Evento:" %>

  <%= f.text_field :description, label: "Descripción evento:" %>

  <%= f.text_field :artists, label: "Artistas que asistirán:", placeholder: "Grupo 1, Grupo 2" %>

  <%= f.text_field :ticket_link, label: "Link a compra del ticket:" %>

  <br><%= f.hidden_field :admin_id, :value => current_admin.id %>
  <%= f.submit %>
<% end %>